{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": ["error", 2],
        "no-use-before-define": "off",
		"@typescript-eslint/no-use-before-define": "off",
        "camelcase": "off",
        "no-unused-vars":"off"
    }
}
